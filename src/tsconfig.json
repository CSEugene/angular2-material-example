{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "filesGlob": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "!./node_modules/**/*.ts",
      "src/custom_typings.d.ts",
      "typings/browser.d.ts"
    ]
  }
}
